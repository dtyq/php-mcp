{
    "name": "dtyq/php-mcp",
    "description": "PHP implementation of MCP server and client",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Dtyq\\Mcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dtyq\\Mcp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "cs-check": "php-cs-fixer check --config=.php-cs-fixer.php",
        "cs-format": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff"
    }
} 